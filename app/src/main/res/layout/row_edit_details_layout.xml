<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/alert_details"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sailec_medium"
        android:padding="5dp"
        android:text="Edit Website Url" />

    <EditText
        android:id="@+id/etxt_web_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/round_border"
        android:fontFamily="@font/sailec_regular"
        android:hint="Website Url"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sailec_medium"
        android:padding="5dp"
        android:text="Edit Image Url" />

    <EditText
        android:id="@+id/etxt_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/round_border"
        android:fontFamily="@font/sailec_regular"
        android:hint="Image Url"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_details_btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"/>

</LinearLayout>