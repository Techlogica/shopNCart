<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/layoutroot"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/hash"
            app:cardCornerRadius="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:elevation="10dp">
                            <ImageView
                                android:id="@+id/cart_product_image"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_weight="1"
                                android:contentDescription="TODO"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/image_placeholder" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/prodectdetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sailec_regular"
                            android:text="@string/product_name"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sailec_regular"
                            android:padding="2dp"
                            android:text="1 kg"
                            android:textColor="@color/darkBlue"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:padding="2dp"
                            android:text="$96.00"
                            android:textColor="@color/white"
                            android:background="@color/darkBlue"
                            android:textSize="13dp"/>

                        <TextView
                            android:id="@+id/txt_cgst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cgst"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/txt_sgst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sgst"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/txt_cess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cess"
                            android:textSize="11dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minHeight="40dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/darkBlue"
                            android:text="@string/line_discount" />
                        <EditText
                            android:id="@+id/edt_disc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="80dp"
                            android:minHeight="30dp"
                            android:textSize="10sp"
                            android:inputType="numberDecimal"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/round_border_cart"
                            />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Percent.(%)"
                        android:textColor="#4C4C4C"
                        android:layout_gravity="bottom"
                        android:textSize="8sp"
                         />


                </LinearLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/layoutroot"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:src="@drawable/cart_cardshape_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@drawable/round_shapecart"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="-"
                android:paddingLeft="13dp"
                android:paddingTop="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textCursorDrawable="@null"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:paddingTop="3dp"
                android:inputType="numberDecimal"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="1"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            >
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_botton"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp">

            </ImageView>
        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>